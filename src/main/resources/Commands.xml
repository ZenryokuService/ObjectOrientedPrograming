<?xml version="1.0"?>
<class>
    <!-- 共通コマンド１：たたかう -->
    <command>
        <!-- コマンドID -->
        <id>ATK</id>
        <!-- コマンド名 -->
        <name>たたかう</name>
        <!-- コマンド効果式 -->
        <formula>ATK</formula>
        <!-- 実行時のメッセージ -->
        <exeMessage>こうげき</exeMessage>
    </command>
    <!-- 共通コマンド２：ぼうぎょ -->
    <command>
        <!-- コマンドID -->
        <id>DEF</id>
        <!-- コマンド名 -->
        <name>ぼうぎょ</name>
        <!-- コマンド効果式 -->
        <formula>DEF</formula>
        <!-- 実行時のメッセージ -->
        <exeMessage>まもりの、かまええをとった</exeMessage>
    </command>
    <!-- まほうコマンド -->
    <command>
        <!-- コマンドID -->
        <id>MAG</id>
        <!-- コマンド名 -->
        <name>まほう</name>
        <!-- コマンド効果式 -->
        <formula>MPW+MAT</formula>
        <!-- 実行時のメッセージ -->
        <exeMessage>をつかった</exeMessage>
    </command>
    <!-- 体当りコマンド -->
    <command>
        <!-- コマンドID -->
        <id>BAT</id>
        <!-- コマンド名 -->
        <name>たいあたり</name>
        <!-- コマンド効果式 -->
        <formula>ATK+AGI</formula>
        <!-- 実行時のメッセージ -->
        <exeMessage>をつかった</exeMessage>
    </command>
    <!-- ついばみコマンド -->
    <command>
        <!-- コマンドID -->
        <id>STC</id>
        <!-- コマンド名 -->
        <name>ついばみ</name>
        <!-- コマンド効果式 -->
        <formula>(INT+AGI) * 2</formula>
        <!-- 実行時のメッセージ -->
        <exeMessage>をつかった</exeMessage>
    </command>
</class>